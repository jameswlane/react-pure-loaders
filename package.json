    "@storybook/addon-options": "3.4.10",
    "@storybook/addons": "3.4.10",
    "@storybook/react": "3.4.10",
    "@types/chance": "1.0.1",
    "@types/css": "0.0.31",
    "@types/enzyme": "3.1.13",
    "@types/jest": "23.3.1",
    "@types/node": "10.7.0",
    "all-contributors-cli": "5.4.0",
    "awesome-typescript-loader": "5.2.0",
    "babel-core": "6.26.3",
    "chance": "1.0.16",
    "codecov": "3.0.4",
    "commitizen": "2.10.1",
    "coveralls": "3.0.2",
    "css": "2.2.3",
    "cz-conventional-changelog": "2.1.0",
    "enzyme": "3.4.2",
    "enzyme-adapter-react-16": "3.4.2",
    "enzyme-to-json": "3.3.4",
    "gh-pages": "1.2.0",
    "jest": "23.5.0",
    "jest-glamor-react": "4.3.1",
    "lint-staged": "7.2.2",
    "opt-cli": "1.6.0",
    "raf": "3.4.0",
    "react": "16.4.2",
    "react-docgen-typescript-loader": "2.2.0",
    "react-dom": "16.4.2",
    "react-test-renderer": "16.4.2",
    "rimraf": "2.6.2",
    "semantic-release": "15.9.8",
    "storybook-readme": "3.3.0",
    "svg-url-loader": "2.3.2",
    "ts-jest": "23.1.3",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.9.2",
    "typescript": "3.0.1",
    "validate-commit-msg": "2.14.0"
  },
  "peerDependencies": {
    "react": "^15.6.1 || 16",
    "react-dom": "^15.6.1 || 16"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
