{
  "name": "react-pure-loaders",
  "version": "0.0.0-development",
  "description": "React PureComponent loading animations ",
  "main": "./lib/index.js",
  "repository": "git@github.com:jameswlane/react-pure-loaders.git",
  "author": "James W. Lane <james.w.lane@mac.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib coverage",
    "commit": "git-cz",
    "commitmsg": "opt --in commit-msg --exec \"validate-commit-msg\"",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "coverage:report": "coveralls",
    "precommit": "lint-staged && opt --in pre-commit --exec \"yarn verify\"",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "setup": "npm i -g @storybook/cli npmvet david nsp depcheck types-checker commitizen semantic-release-cli all-contributors-cli",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --coverage",
    "test:ci": "jest --maxWorkers=4",
    "test:coverage:ci": "jest --coverage --maxWorkers=4",
    "test:watch": "jest --watch",
    "ts:build": "tsc",
    "ts:watch": "tsc -w",
    "tslint": "tslint --config tslint.json --project tsconfig.json \"src/**/*.ts\"",
    "tslint:fix": "tslint --config tslint.json --project tsconfig.json --fix \"src/**/*.ts\"",
    "verify": "yarn verify:npmvet && yarn verify:david && yarn verify:nsp && yarn verify:tscheck && yarn tslint && yarn test",
    "verify:ci": "yarn verify:npmvet && yarn verify:nsp && yarn tslint && yarn test:ci",
    "verify:check": "depcheck",
    "verify:david": "david",
    "verify:npmvet": "npmvet --renderer ci --strict",
    "verify:nsp": "nsp check --output summary",
    "verify:tscheck": "types-checker"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "react"
  ],
  "bugs": {
    "url": "https://github.com/jameswlane/react-pure-loaders/issues"
  },
  "homepage": "https://github.com/jameswlane/react-pure-loaders#readme",
  "dependencies": {
    "glamor": "2.20.40"
  },
  "devDependencies": {
    "@storybook/addon-actions": "3.3.8",
    "@storybook/addon-knobs": "3.3.8",
    "@storybook/react": "3.3.9",
    "@types/node": "9.3.0",
    "@types/storybook__addon-actions": "3.0.1",
    "@types/storybook__addon-knobs": "3.2.1",
    "@types/storybook__react": "3.0.6",
    "all-contributors-cli": "4.10.1",
    "awesome-typescript-loader": "3.4.1",
    "commitizen": "2.9.6",
    "coveralls": "3.0.0",
    "css": "2.2.1",
    "cz-conventional-changelog": "2.1.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.0",
    "jest": "22.0.6",
    "jest-glamor-react": "3.2.2",
    "lint-staged": "6.0.0",
    "opt-cli": "1.6.0",
    "raf": "3.4.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-test-renderer": "16.2.0",
    "rimraf": "2.6.2",
    "semantic-release": "11.0.2",
    "ts-jest": "22.0.1",
    "tslint": "5.9.1",
    "tslint-config-airbnb": "5.4.2",
    "typescript": "2.6.2",
    "validate-commit-msg": "2.14.0"
  },
  "peerDependencies": {
    "react": "^15.6.1 || 16",
    "react-dom": "^15.6.1 || 16"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
